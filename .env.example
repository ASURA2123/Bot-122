# Facebook credentials
FB_EMAIL=your_email@example.com
FB_PASSWORD=your_password

# Bot configuration 
PREFIX=!
ADMIN_PREFIX=/
OWNER_ID=123456789 # Facebook ID của chủ bot
ADMIN_IDS=987654321,987654322 # ID của các admin (phân cách bằng dấu phẩy)

# Anti-out configuration
ANTI_OUT_ENABLED=true
ANTI_OUT_WHITELIST=123456789,987654321 # Users allowed to leave group
ANTI_OUT_MESSAGE=⚠️ Bạn không được phép rời nhóm!

# Logging configuration
LOG_LEVEL=info # debug, info, warn, error
LOG_CONSOLE=true
LOG_FILE=true
LOG_DIR=logs
LOG_MAX_SIZE=5242880 # 5MB
LOG_MAX_FILES=5

# Email notification configuration
EMAIL_ENABLED=false
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_TO=admin-email@example.com

# Slack notification configuration
SLACK_ENABLED=false
SLACK_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#bot-alerts

# Security configuration
MAX_LOGIN_ATTEMPTS=3
LOGIN_LOCKOUT_TIME=300000 # 5 minutes
ALLOWED_THREAD_TYPES=user,group
BLOCK_SPAM=true
SPAM_THRESHOLD=5
SPAM_TIME_WINDOW=60000 # 1 minute

# Recovery configuration
AUTO_RESTART=true
MAX_RETRIES=3
RETRY_DELAY=5000 # 5 seconds
HEALTH_CHECK_INTERVAL=60000 # 1 minute
ERROR_THRESHOLD=10

# Development configuration
NODE_ENV=development # development, production